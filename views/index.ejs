<%- include('include/_header') %>

<!-- all post show here -->
<div class="w-full md:w-4/5 mx-auto bg-gray-200 p-4">
    <div class="text-2xl text-gray-800 flex m-5 font-serif font-semibold justify-between">
      <div>All post</div>
      <div><a href="/api/admin/logout">Logout</a></div>
    </div>
    <table class="table-auto">
        <thead>
           
          <tr>
            <th class="w-1/3">Post</th>
            <th class="w-1/4">Location</th>
            <th class="w-1/4">Userdetails</th>
            <th class="w-1/4">Post Details</th>
            <th class="w-1/4">Action</th>
          </tr>
         
        </thead>
        <tbody>
            <% post.map((data)=>{ %>
          <tr>
            <td class="pl-2"><%= data.postBody.slice(0,50) %> </td>
            <td class="text-center"><%= data.address %></td>
            <td class="text-center"><a href="/api/admin/singleuser/<%=data.userId %>">show</a> </td>
            <td class="text-center"><a href="/api/admin/singlepost/<%=data._id %>">show</a></td>
            <td class="text-center"><a href="/api/admin/deletepost/<%=data._id %>">Delete</a></td>
          </tr>
          <%  })%>
        </tbody>
      </table>
</div>




<%- include('_Footer')%>